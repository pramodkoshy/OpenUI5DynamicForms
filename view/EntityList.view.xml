<mvc:View
    controllerName="com.supabase.easyui5.controller.EntityList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:form="sap.ui.layout.form"
    xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    displayBlock="true">
    
    <Page id="entityListPage" title="{viewModel>/tableName} List">
        <customHeader>
            <Toolbar>
                <Button 
                    id="navToggleButton" 
                    icon="sap-icon://menu2" 
                    press=".onToggleNav" />
                <Title text="{viewModel>/tableName} List" level="H2" />
                <ToolbarSpacer />
                <Button icon="sap-icon://add" tooltip="Create New" press=".onCreatePress" />
                <Button icon="sap-icon://refresh" tooltip="Refresh Data" press=".onRefreshPress" />
            </Toolbar>
        </customHeader>
        
        <content>
            <f:DynamicPage headerExpanded="false">
                <f:title>
                    <f:DynamicPageTitle>
                        <f:heading>
                            <Title text="{viewModel>/tableName} Management" />
                        </f:heading>
                        <f:actions>
                            <!-- Search icon as dropdown trigger -->
                            <Button 
                                icon="sap-icon://search" 
                                text="Server Search"
                                tooltip="Expand to search on server" 
                                press=".onServerSearchPress" />
                        </f:actions>
                    </f:DynamicPageTitle>
                </f:title>
                
                <f:header>
                    <f:DynamicPageHeader pinnable="true">
                        <f:content>
                            <VBox class="sapUiSmallMargin">
                                <HBox alignItems="Center" class="sapUiTinyMarginBottom">
                                    <Label text="Advanced Search" class="sapUiSmallMarginEnd" design="Bold" />
                                    <ToolbarSpacer />
                                    <Button 
                                        text="Search" 
                                        press=".onAdvancedSearch" 
                                        type="Emphasized" 
                                        class="sapUiTinyMarginBegin" />
                                    <Button 
                                        text="Reset" 
                                        press=".onResetSearch" 
                                        class="sapUiTinyMarginBegin" />
                                </HBox>
                                
                                <form:SimpleForm 
                                    id="searchForm"
                                    layout="ResponsiveGridLayout"
                                    editable="true"
                                    labelSpanXL="4"
                                    labelSpanL="4"
                                    labelSpanM="4"
                                    labelSpanS="12"
                                    adjustLabelSpan="false"
                                    emptySpanXL="0"
                                    emptySpanL="0"
                                    emptySpanM="0"
                                    emptySpanS="0"
                                    columnsXL="2"
                                    columnsL="2"
                                    columnsM="1">
                                    
                                    <!-- Search fields will be added dynamically based on table columns -->
                                    
                                </form:SimpleForm>
                            </VBox>
                        </f:content>
                    </f:DynamicPageHeader>
                </f:header>
                
                <f:content>
                    <VBox class="sapUiSmallMargin">
                       
                        
                        <MessageStrip
                            text="Click on any row to view details"
                            type="Information"
                            showIcon="true"
                            class="sapUiSmallMarginBottom">
                        </MessageStrip>
                        
                        <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiSmallMarginBottom">
                            <Text id="tableCountText" text="No items" />
                            <SearchField
                                id="quickSearch"
                                width="300px"
                                search=".onQuickSearch" 
                                placeholder="Quick Search..." />

                             <Button 
                                text="Columns" 
                                icon="sap-icon://column-chart-dual-axis" 
                                press=".onColumnsButtonPress" 
                                tooltip="Select Columns" />
                        </HBox>
                        
                        <Table
                            id="entityTable"
                            items="{viewModel>/items}"
                            growing="true"
                            growingThreshold="20"
                            growingScrollToLoad="true"
                            fixedLayout="false"
                            alternateRowColors="true"
                            class="sapUiResponsiveMargin"
                            sticky="ColumnHeaders,HeaderToolbar">
                            
                            <headerToolbar>
                                <Toolbar>
                                    <Title text="{viewModel>/tableName} List" level="H2"/>
                                    <ToolbarSpacer/>
                                    <SearchField 
                                        id="tableSearch"
                                        width="30%" 
                                        search=".onSearch" 
                                        placeholder="Search..."/>
                                    <Button 
                                        text="Create New" 
                                        icon="sap-icon://add" 
                                        press=".onCreatePress" 
                                        type="Emphasized"/>
                                    <Button 
                                        icon="sap-icon://refresh" 
                                        tooltip="Refresh Data" 
                                        press=".onRefreshPress" />
                                </Toolbar>
                            </headerToolbar>
                            
                            <!-- Columns will be added dynamically in the controller -->
                            <columns>
                                <!-- Dynamic columns -->
                            </columns>
                            
                            <items>
                                <ColumnListItem type="Navigation" press=".onItemPress">
                                    <!-- Cells will be added dynamically in the controller -->
                                </ColumnListItem>
                            </items>
                        </Table>
                    </VBox>
                </f:content>
            </f:DynamicPage>
        </content>
        
        <footer>
            <Toolbar>
                <Text text="{viewModel>/filterInfo}" class="sapUiSmallMarginBegin" />
                <ToolbarSpacer />
                <Button icon="sap-icon://action-settings" text="Export" press=".onExportPress" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>